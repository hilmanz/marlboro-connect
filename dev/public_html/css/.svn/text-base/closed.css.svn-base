body.close-page{}

.close-web{
	background:url(../img_close/bg.jpg) no-repeat center top #6dcafe;
}
#close-web{
	padding:240px 0 0 0;
	width:500px;
	margin:0 auto;
	color:#fff;
	text-align:center;
}
#close-web h1{
	font-weight:normal;
	margin:25px 0;
	font-size:24px;
}
#close-web h2{
	font-size:18px;
	color:#333333;
	margin:60px 0;
}

#close-web h2 a{
	color:#006699;
}
.tutup-text{
	background:url(../img_close/tutup-text.png) no-repeat;
	width:717px; height:430px;
	margin:100px auto 0 auto;
}
.info-text{
	display:block;
	width:348px;
	height:40px;
	text-decoration:none;
	position:absolute;
	margin:378px 0 0 315px;
}
#content-closed{
	background:url(../img_close/closed-text.png) no-repeat;
	width:1024px; height:614px; margin: auto;
}
#town-closed{
	background:url(../img_close/town.png) bottom center no-repeat;
	width:1024px; height:217px;
	margin:-30px auto 0 auto;
}